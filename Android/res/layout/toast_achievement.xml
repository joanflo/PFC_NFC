<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toast_layout_root"
    style="@style/toast" >
              
    <ImageView
        android:id="@+id/imageView_toastachievement_image"
        android:src="@drawable/default_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/title_badge" />

    <TextView
        android:id="@+id/textView_toastachievement_badgename"
        style="@style/b"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView_toastachievement_image"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/imageView_toastachievement_image"
        android:textColor="@color/main_white" />

    <TextView
        android:id="@+id/textView_toastachievement_description"
        style="@style/p"
        android:layout_alignLeft="@+id/textView_toastachievement_badgename"
        android:layout_alignRight="@+id/textView_toastachievement_badgename"
        android:layout_below="@+id/textView_toastachievement_badgename"
        android:textSize="12sp"
        android:textColor="@color/main_white" />
    
</RelativeLayout>