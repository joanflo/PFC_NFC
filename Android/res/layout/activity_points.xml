            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:text="@string/number5" />

		<TextView
            android:id="@+id/textView_points2_txtpoints"
		    style="@style/p"
